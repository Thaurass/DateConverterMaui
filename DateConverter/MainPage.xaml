<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateConverter.MainPage"
             xmlns:local="clr-namespace:DateConverter;assembly=DateConverter"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui">

    <ContentPage.BindingContext>
        <local:ViewModelAA/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Orientation="Horizontal">
                <Button HorizontalOptions="Center" Margin="6" Command="{Binding AddItemAACommand}" Text="Выбрать лог файл формата AA" />
            </StackLayout>
            <lvc:CartesianChart Grid.Row="1" ZoomMode="X" Series="{Binding SeriesAA}" LegendPosition="Right"></lvc:CartesianChart>
            <!--<StackLayout Grid.Row="2" Orientation="Horizontal">
                <Button HorizontalOptions="Center" Margin="6" Command="{Binding AddItemTCommand}" Text="Выбрать лог файл формата t" />
            </StackLayout>
            <lvc:CartesianChart Grid.Row="3" ZoomMode="X" Series="{Binding SeriesT}" LegendPosition="Right"></lvc:CartesianChart>-->
        </Grid>
    </ContentPage.Content>

</ContentPage>
